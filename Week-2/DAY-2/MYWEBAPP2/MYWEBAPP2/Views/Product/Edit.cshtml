@{
    ViewBag.Title = "Edit";
}

<h2>EditView</h2>
<p>This View Corresponds to the Edit action method.</p>

@model Product
<h1>Edit</h1>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Price">Price:</label>
        <input asp-for="Price" />
    </div>
    <button type="submit">Save</button>
</form>